<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
			
			<%= form_for(:session, url: login_path) do |f| %> 
				<p>Username (email)</p>
			  <%= f.email_field :email, :placeholder => "Email" %>
			  <br>
			  <p>Password</p>
			  <%= f.password_field :password, :placeholder => "Password" %> 
			  <br>
			  <br>
			  <%= f.submit "Log in", class: "btn-submit" %>
			<% end %>
		
    </div>
	</div>
</div>